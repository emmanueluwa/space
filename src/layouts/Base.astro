---
import Navbar  from "@components/Navbar.astro";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>{title} / Fulo Space</title>
    <meta name="viewport" content="width-device-width, initial-scale=1" />
    <style>
      #font-face {
        font-family: 'Inter';
        src: url('/fonts/Inter-Regular.woff2') format('woff2');
        font-display: swap;
        font-weight: 400;
      }

      #font-face {
        font-family: 'Inter';
        src: url('/fonts/Inter-Italic.woff2') format('woff2');
        font-display: swap;
        font-weight: 400;
        font-style: italic;
      }

      #font-face {
        font-family: 'Inter';
        src: url('/fonts/Inter-Bold.woff2') format('woff2');
        font-display: swap;
        font-weight: 700;
        font-style: italic;
      }

    
    </style>
  </head>

  <body>
    <Navbar />

    <div class="max-w-5xl m-auto mt-16">
      <slot />
    </div>
  </body>
</html>
